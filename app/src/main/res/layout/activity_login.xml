<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="366dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422"
        app:cardBackgroundColor="#36D3B4B4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/regUserPic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:background="@drawable/reg_edittextstle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:layout_margin="8dp"
                    android:id="@+id/login_Mail"
                    android:inputType="textEmailAddress"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:passwordToggleEnabled="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:background="@drawable/reg_edittextstle"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:layout_margin="8dp"
                        android:id="@+id/login_password"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:text="Hyperlink"
                    android:id="@+id/hyperlink"/>

                <Button
                    android:backgroundTint="@color/blueish"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_login_24"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginBtn"
                    android:text="Login"
                    android:layout_margin="8dp"

                    />
                <Button
                    android:backgroundTint="@color/blueish"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_login_24"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/logingate"
                    android:text="Gateway"
                    android:layout_margin="8dp"
                    android:visibility="gone"

                    />

            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>